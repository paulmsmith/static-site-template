{
  "name": "paulmsmith-static-site-template",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^14.0.0"
  },
  "description": "The static site generator template repo",
  "keywords": [
    "paulmsmith",
    "11ty"
  ],
  "author": "Paul Michael Smith",
  "license": "MIT",
  "homepage": "https://paulsmith.site",
  "repository": "github:paulmsmith/static-site",
  "bugs": "https://github.com/paulmsmith/static-site/issues",
  "scripts": {
    "prebuild": "rm -rf public",
    "build:files": "eleventy",
    "build:javascripts": "rollup --config etc/rollup.config.js",
    "build:styles": "node-sass app/_stylesheets -o public/stylesheets --include-path app",
    "build": "npm-run-all --serial prebuild build:*",
    "prewatch": "npm run build",
    "watch:files": "eleventy --serve",
    "watch:javascripts": "rollup --config etc/rollup.config.js --watch",
    "watch:styles": "node-sass app/_stylesheets -o public/stylesheets --watch",
    "watch": "npm-run-all --parallel watch:*",
    "dev": "npm run watch",
    "prestart": "npm run build",
    "start": "npm run watch:files",
    "test": "standard"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "accessible-autocomplete": "^2.0.3",
    "http-server": "^14.0.0",
    "lodash": "^4.17.21",
    "luxon": "^2.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^8.1.2",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.43.0"
  },
  "devDependencies": {
    "standard": "^16.0.3"
  },
  "standard": {
    "ignore": [
      "!.eleventy.js"
    ]
  }
}
